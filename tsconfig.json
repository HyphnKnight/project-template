{
  "compilerOptions": {
    "diagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "esnext",
    "noErrorTruncation": true
  }
}
